<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <meta charset="utf-8">
    <script type="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" charset="utf-8"></script>
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <title>Yelp camp</title>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">YelpCamp</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if (!currentUser) { %>
                <li><a href="/login">Log in</a></li>
                <li><a href="/register">Sign up</a></li>
            <% } else { %>
                <li><a href="/campgrounds">Currently signed in as <%= currentUser.username %></a></li>
                <li><a href="/logout">Log out</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <% if (error && error.length > 0) { %>
        <div class="container">
          <div class="alert alert-danger">
            <%= error %>
          </div>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="container">
          <div class="alert alert-success">
            <%= success %>
          </div>
        </div>
    <% } %>

    <% if (warning && warning.length > 0) { %>
        <div class="container">
          <div class="alert alert-warning">
            <%= warning %>
          </div>
        </div>
    <% } %>
    <div id="landing-header">
      <h1>Welcome to Yelp Camp</h1>
      <a class="btn btn-lg btn-success" href="/campgrounds">View all campgrounds</a>
    </div>
    <ul class="slideshow">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>
  </body>
</html>
